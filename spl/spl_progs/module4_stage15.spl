	multipush(R0,R1,R2,R3,R4,R5,R6);
	// call acquire terminal using function no. 8 in R1 and pid in R2
	R1 = 8;
	R2 = curr_pid;
	call MOD_0;
	multipop(R0,R1,R2,R3,R4,R5,R6);
	
	print word;
	
	multipush(R0,R1,R2,R3,R4,R5,R6);
